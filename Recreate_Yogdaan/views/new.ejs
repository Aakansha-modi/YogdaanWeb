<%- include("partials/header") %>

<a class="ui teal button" href="/blogs/fund" style="padding-top: 1em; margin-left: 34em; margin-top: 2.5em;">Add Fund Raise Blog</a>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label class="upload-group">Image</label>
            <input type="file" id="image" accept="blogs/" name="uk">
            <input type="hidden" id="pic" accept="blogs/" name="blog[image]">
            <h4 id="upload"></h4>
            <button type="button" id="uploadButton" onclick="upload();" class="ui green button">Upload</button>
            <progress id="myprogress" value="0" max="100"></progress>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <input type="submit" class="ui violet big basic button">
    </form>
</div>
<%- include("partials/footer") %>