<%- include("partials/header") %>
<a class="ui teal button" style="float: left; margin: 2em;">Donation</a>
<div class="dropdown" style="float: right; margin: 2em;">
    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Type of work
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <% response.forEach(function(quest){ %>
            <a class="dropdown-item" href="#"><%= quest.Type %></a>
        <% }) %>
    </div>
</div>
<div class="ui main text container">
    <div class="ui huge header">Requests</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
                <div class="table">
                    <table border="2" class="table ui blue table">
                        <thead>
                            <tr>
                                <th class="row1">State</th>
                                <th class="row2">City</th>
                                <th class="row3">Day</th>
                                <th class="row4">Request</th>
                                <th class="row5">Query</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% response.forEach(function(quest){ %>
                            <tr>
                                <td><%= quest.State %></td>
                                <td><%= quest.City %></td>
                                <td><%= quest.Day %></td>
                                <td><a href="/request/show/<%= quest.id %>"><%= quest.Request %></a></td>
                                <td id="btn" style="position: relative;">
                                    <a href="/request/delete/<%= quest.id %>"><button type="submit" id="cross1" class="ui red button"></button></a>
                                    <a href="#"><button type="submit" id="cross2" class="ui green button"></button></a>
                                    <a href="#"><button type="submit" id="cross2" class="ui blue button"></button></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
        </div>
    </div>
</div>


<%- include("partials/footer") %>